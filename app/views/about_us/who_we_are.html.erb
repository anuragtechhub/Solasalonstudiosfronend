<%= render 'shared/public_website/about_us_nav', :page => :who_we_are %>

<div class="who-we-are">

	<div class="container content-container">
		
		<h1><%= t 'page.who_we_are.title' %></h1>
		
		<h2><%= t 'page.who_we_are.subhead' %></h2>
		<p><%= t 'page.who_we_are.body1' %></p>
		<p><%= t 'page.who_we_are.body2' %></p>
		<h4 class="emphasis"><%= t 'page.who_we_are.to_help_set_them_up_for_success' %></h4>

	</div>

	<div class="container img-wrap-paint-box-container">

		<div class="img-wrap-paint-box">
			<%= image_tag 'WhoWeAre_1.jpg', :class => 'u-full-width' %>		
			<div class="paint-box">
				<div class="colors">&nbsp;</div>
				<div class="content">
					<h2><%= t 'page.who_we_are.number_of_locations' %></h2>
					<h3><%= t 'page.who_we_are.locations_nationwide' %></h3>
				</div>
			</div>
		</div>

	</div>

	<div class="container join-our-diverse-community-container">

		<div class="join-our-diverse-community">
			<div class="img-wrap"><%= image_tag 'WhoWeAre_2.jpg' %></div>
			<div class="content">
				<h2><%= t 'page.who_we_are.join_our_diverse_community' %></h2>
				<p><%= t 'page.who_we_are.join_our_diverse_community_text' %></p>
				<%= link_to :own_your_salon, :class => 'button primary' do %><%= t 'page.who_we_are.join_our_diverse_community_button_text' %><% end %>
				<a href="//www.youtube.com/watch?v=nbHFs0XjS8s" class="watch-our-video-mobile">
					<p><%= t 'page.who_we_are.watch_our_video' %></p>
					<div class="play-circle play-video">
						<span class="fa fa-play">&nbsp;</span>
					</div>
				</a>
			</div>
			<div class="watch-our-video">
				<a href="//www.youtube.com/watch?v=nbHFs0XjS8s" class="play-circle play-video">
					<span class="fa fa-play">&nbsp;</span>
				</a>
				<p><%= t 'page.who_we_are.watch_our_video' %></p>
			</div>
		</div>

	</div>

	<div class="container inset-subhead-container">
		<div class="img-wrap"><%= image_tag "WhoWeAre_3.jpg", :class => 'u-full-width' %></div>
		<h2><%= t 'page.who_we_are.subhead2' %><div class="line">&nbsp;</div></h2>
		
	</div>

	<div class="container">

		<div class="row our-mission">
			<div class="one-half column"><h2><%= t 'page.who_we_are.our_mission' %></h2></div>
			<div class="one-half column"><p><%= t 'page.who_we_are.our_mission_text' %></p></div>
		</div>

		<div class="row our-values">
			<div class="one-half column"><h2><%= t 'page.who_we_are.our_values' %></h2></div>
			<div class="one-half column"><p><%= t 'page.who_we_are.our_values_text' %></p></div>
		</div>

	</div>

	<div class="container">
	  <div class="cta cta-own">
	    <%= image_tag 'cta/OwnSalon.png' %>
	    <div class="cta-contents">
	      <h2><%= t 'page.who_we_are.join_our_community' %></h2>
	      <p><%= t 'page.who_we_are.join_our_community_text' %></p>
	      <%= link_to :own_your_salon, :class => 'button primary' do %><%= t 'page.who_we_are.join_our_community_button_text' %><% end %>
	    </div>
	  </div>
	</div>

	<div class="container experience-more">
		<h4 class="h1"><%= t 'page.who_we_are.experience_more' %></h4>
	</div>

	<% if I18n.locale.to_s == 'en' %>
	  <div class="sola-benefits">
	    <div class="container">
	      
	      <div class="row">
	        <div class="columns four">
	          <%= link_to :sola_pro, :class => 'benefit-tile' do %>
	            <div class="img-wrap">
	              <%= image_tag 'WhySola/SolaPro.jpg' %>
	              <span class="title"><%= t('page.who_we_are.sola_pro') %></span>
	            </div>
	            <span class="text"><%= t('page.who_we_are.sola_pro_text') %></span>
	          <% end %>
	        </div>
	        <div class="columns four">
	          <%= link_to :sola_sessions, :class => 'benefit-tile' do %>
	            <div class="img-wrap">
	              <%= image_tag 'WhySola/SolaSessions.jpg' %>
	              <span class="title"><%= t('page.who_we_are.sola_sessions') %></span>
	            </div>
	            <span class="text"><%= t('page.who_we_are.sola_sessions_text') %></span>
	          <% end %>
	        </div>
	        <div class="columns four">
	          <%= link_to :solagenius, :class => 'benefit-tile' do %>
	            <div class="img-wrap">
	              <%= image_tag 'WhySola/SolaGenius.jpg' %>
	              <span class="title"><%= t('page.who_we_are.solagenius') %></span>
	            </div>
	            <span class="text"><%= t('page.who_we_are.solagenius_text') %></span>
	          <% end %>
	        </div>        
	      </div>

	    </div> <!-- container -->
	  </div> <!-- sola-benefits -->
	<% else %>
	  <div class="sola-benefits">
	    <div class="container">
	      
	      <div class="row">
	        <div class="columns six">
	          <%= link_to :sola_pro, :class => 'benefit-tile' do %>
	            <div class="img-wrap">
	              <%= image_tag 'WhySola/SolaPro.jpg' %>
	              <span class="title"><%= t('page.who_we_are.sola_pro') %></span>
	            </div>
	            <span class="text"><%= t('page.who_we_are.sola_pro_text') %></span>
	          <% end %>
	        </div>
	        <div class="columns six">
	          <%= link_to :sola_sessions, :class => 'benefit-tile' do %>
	            <div class="img-wrap">
	              <%= image_tag 'WhySola/SolaSessions.jpg' %>
	              <span class="title"><%= t('page.who_we_are.sola_sessions') %></span>
	            </div>
	            <span class="text"><%= t('page.who_we_are.sola_sessions_text') %></span>
	          <% end %>
	        </div>        
	      </div>

	    </div> <!-- container -->
	  </div> <!-- sola-benefits -->
	<% end %>

</div>

<% content_for(:title) { t('page.who_we_are.title').html_safe } %>
<% content_for(:canonical_url) { "https://www.solasalonstudios.#{I18n.locale != :en ? 'ca' : 'com'}/who-we-are" } %>
<% content_for(:meta_description) { t('page.who_we_are.meta_description') } %>