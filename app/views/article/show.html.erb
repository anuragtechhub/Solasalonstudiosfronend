<div class="container content-container">
  <div class="blog-post-article">

    <div class="row">
      
      <div class="one-third column">
        <h4><%= @article.title.html_safe %></h4>
        <p class="subtle" style="margin-top:-20px;margin-bottom:30px;">Posted on <%= @article.created_at.strftime('%B %e, %Y') %></p>
        <div class="share-socially"><h3>Share Socially</h3></div>
        <ul class="social three">
          <li><%= link_to "https://www.pinterest.com/pin/create/button/?url=#{request.original_url}&media=#{@article.image(:original)}&description=#{@article.safe_title}", :target => '_blank' do %><span class="ss-social-regular ss-pinterest"></span><% end %></li>
          <li><%= link_to "http://twitter.com/home/?status=#{@article.safe_title} #{request.original_url}", :target => '_blank' do %><span class="ss-social-regular ss-twitter"></span><% end %></li>
          <li><%= link_to "https://www.facebook.com/sharer/sharer.php?u=#{request.original_url}", :target => '_blank' do %><span class="ss-social-regular ss-facebook"></span><% end %></li>
        </ul>
      </div>
      
      <div class="two-thirds column">
        <p class="summary"><%= @article.body.gsub(/\n\n/, '<br><br>').html_safe %></p>
      </div>

    </div>

  </div>

</div>

<% content_for(:scripts) { javascript_include_tag('blog') } %>