<div class="container content-container">
  
  <div class="row">
    
    <div class="one-half column">
      <h1>Our Blog</h1>
    </div>

    <div class="one-half column text-right">
      <div class="sola-select blog-select">
        <div class="row">
          <div class="option-placeholder"><h3><%= @category ? @category.name : 'Choose a Category' %></h3></div>
          <div class="arrow"><span class="ss-dropdown"></span></div>
        </div>
        <div class="options">
          <% @categories.each do |category| %>
            <div class="option" data-value="<%= blog_category_path(category.url_name) %>"><%= category.name.html_safe %></div>
          <% end %>
          <!--<div class="option" data-value="<%= blog_path %>">All Categories</div>-->
        </div>
      </div>
    </div>

  </div>

</div>

<div class="location-breadcrumb blog-breadcrumb">
  <div class="container">
    <%= link_to 'Blog', :blog %>
    <% if @category %>
      <span class="divider">/</span> <%= link_to @category.name, blog_category_path(@category.url_name) %>
    <% end %>
  </div>
</div>

<div class="container content-container">

  <% @posts.each do |post| %>
    <div class="blog-post-summary">
      <div class="row">
        <div class="twelve columns">
          <%= link_to show_blog_path(post), :class => 'blog-list-picture' do %>
            <%= image_tag post.image(:original), :class => 'full-width' %>
            <div class="blog-list-picture-overlay">
              <div class="large-button">Read Article</div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="one-third column"><h4><%= link_to show_blog_path(post) do %><%= post.title.html_safe %><% end %></h4><p class="subtle">Posted on <%= post.created_at.strftime('%B %e, %Y') %><br><%= post.author.html_safe %></p></div>
        <div class="two-thirds column"><p class="summary"><%= post.summary.html_safe %> &nbsp;<%= link_to 'Read More', show_blog_path(post) %></p></div>
      </div>
    </div>
  <% end %>
  
</div>

<% content_for(:scripts) { javascript_include_tag('blog') } %>