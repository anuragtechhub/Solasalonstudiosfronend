        <li><%= link_to 'https://twitter.com/solasalons', :target => '_blank', 'aria-label' => 'twitter' do %><span class="ss-social-regular ss-twitter"></span><% end %></li>
        <li><%= link_to 'https://www.pinterest.com/solasalons/', :target => '_blank', 'aria-label' => 'pinterest' do %><span class="ss-social-regular ss-pinterest"></span><% end %></li>
      <% else %>
        <li><%= link_to 'https://instagram.com/solacanada/', :target => '_blank', 'aria-label' => 'instagram', :style => 'margin-right:0;' do %><span class="ss-social-regular ss-instagram"></span><% end %></li>
        <li><%= link_to 'https://www.facebook.com/solacanada', :target => '_blank', 'aria-label' => 'facebook' do %><span class="ss-social-regular ss-facebook"></span><% end %></li>
        <li><%= link_to 'https://twitter.com/solacanada', :target => '_blank', 'aria-label' => 'twitter' do %><span class="ss-social-regular ss-twitter"></span><% end %></li>
        <li><%= link_to 'https://www.pinterest.com/solasalons/', :target => '_blank', 'aria-label' => 'pinterest' do %><span class="ss-social-regular ss-pinterest"></span><% end %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="ready-to-be-your-own-boss">
  <div class="container">
    <h1><%= t 'page.contact.ready_to_be_your_own_boss' %></h1>
    <h2><%= t 'page.contact.sola_makes_it_easy' %></h2>
  </div>
</div>

<div class="container">
  <div class="row sola-home-office">
    <div class="col-md-12">
      <h1 class="chalet-new-york" style="color:#636363;font-size:44px;line-height:48px;margin:0;"><%= t('page.contact.are_you_interested').html_safe %></h1>
    </div>
  </div>

  <div class="row franchising">
    <div class="col-md-6">
      <img src="https://d3p1kyyvw4qtho.cloudfront.net/contact-franchising.jpg" alt="3 men sit at the table" class="u-full-width" style="max-width:500px;margin-bottom:15px" />
    </div>

    <div class="col-md-6">
      <div class="sola-address">
        <p class="pl-1">300 Union Blvd, Suite 600<br />Lakewood, CO 80228</p>
        <p class="pl-1"><a href="mailto:hello@solasalonstudios.com" class="pink-link">hello@solasalonstudios.com</a></p>
        <p><%= link_to t('page.contact.contact_for_franchising_opportunities').html_safe, "https://www.solafranchising.#{I18n.locale.to_s == 'en-CA' ? 'ca' : 'com'}", :class => 'button request-franchising-info primary pill ga-et', :style => 'width:auto', "data-type" => 'us-franchising', 'data-gcategory' => 'Franchising Link to SolaFranchising.com', 'data-gaction' => 'click', 'data-glabel' => 'Contact Us' %></p>
      </div>
    </div>
