<div class="contact-2019">

  <div class="hero-carousel owl-carousel owl-theme home-all">
    <div class="item">
        <div class="img-wrap" style="padding-bottom:39%;">
          <% if I18n.locale.to_s.in?(%w[en en-CA]) %>
            <%= link_to 'https://www.youtube.com/watch?v=ufd5R5uLY-Q', tabindex: 0, target: '_blank' do %>
              <%= image_tag "https://d3p1kyyvw4qtho.cloudfront.net/own_your_salon/New-Year-Desktop-v1-R1.jpg", alt: "With Sola you can have it all.", :width => 2646, :height => 1006 %>
            <% end %>
          <% else %>
            <%= image_tag "https://d3p1kyyvw4qtho.cloudfront.net/own_your_salon/ContactUs22.jpg", alt: "Reimagine Salon life. Imagine Sola.", :width => 2646, :height => 1006 %>
          <% end %>
        </div>
    </div>
  </div>

  <div class="hero-carousel owl-carousel owl-theme home-mobile">
    <div class="item">
        <div class="img-wrap" style="padding-bottom:39%;">
          <% if I18n.locale.to_s.in?(%w[en en-CA]) %>
            <%= link_to 'https://www.youtube.com/watch?v=ufd5R5uLY-Q', tabindex: 0, target: '_blank' do %>
              <%= image_tag "https://d3p1kyyvw4qtho.cloudfront.net/own_your_salon/New-Year-Mobile-v1-R1.jpg", alt: "With Sola you can have it all." %>
            <% end %>
          <% else %>
            <%= image_tag "https://d3p1kyyvw4qtho.cloudfront.net/own_your_salon/contact_us_header_mobile.jpg", alt: "Reimagine Salon life. Imagine Sola." %>
          <% end %>
        </div>
    </div>
  </div>

<div class="container content-container">
  <a name="get-in-touch" id="get-in-touch"></a>
  <div class="row">
    <div class="col-md-6">
      <h1><%= t('page.contact.get_in_touch').html_safe %></h1>
      <h2 class="start-the-convo"><%= t('page.contact.body1').html_safe %></h2>

      <% if I18n.locale == :en %>
        <div>
        <%= link_to :booknow_search, :class => 'button primary pill square contact-book-now' do %>
          <%= t 'page.contact.book_now' %>
        <% end %>
        </div>
      <% end %>

      <%= link_to :salon_professionals, :class => 'button primary pill square contact-salon-professionals' do %>
        <%= image_tag 'contact_salon_pro.png', alt: "Scissors and comb icon", :width => (68 / 2), :height => (76 / 2), :style => 'position: relative; left: -4px; margin-right: 10px; top: -1px' %>
        <%= t 'page.contact.contact_a_beauty_professional' %>
      <% end %>
    </div>

    <div class="col-md-6">

      <div class="contact-us-form-wrapper">


          <%= render 'shared/contact_form_component', :required_fields => [:name, :email, :phone, :how_can_we_help_you] %>

      </div>

    </div>
  </div>
</div>

<div class="follow-us-on-social">
  <div class="container">
    <h2><%= t 'page.contact.follow_us_on_social' %></h2>
    <ul class="social">
      <% if I18n.locale == :en %>
        <li><%= link_to 'https://instagram.com/solasalons/', :target => '_blank', 'aria-label' => 'instagram' do %><span class="ss-social-regular ss-instagram"></span><% end %></li>
