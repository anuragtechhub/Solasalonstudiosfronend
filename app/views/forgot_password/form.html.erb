<%= stylesheet_link_tag "admin", media: "all" %>

<div class="devise-sign-in">

  <div style="text-align:center"><%= image_tag 'logo_white.png', :width => 200, :height => 127 %></div>

  <%= form_for :forgot_password_form do |f| %>
   
    <h1>Forgot Password?</h1>

    <% if @error %>
      <div id="error">We couldn't find an administrator record with that username. Please try again.</div>
    <% end %>   

    <% if @success %>
      <div id="success"><%= @success %></div>
    <% end %>  

    <div class="field">
      <label>Username</label>
      <input type="text" name="username" value="<%= params[:username] %>" autofocus="autofocus">
    </div>

    <div class="actions">
      <button type="submit">Submit</button>
    </div>
  <% end %>

</div>

