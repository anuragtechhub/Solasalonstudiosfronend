<%= stylesheet_link_tag "admin", media: "all" %>

<div class="devise-sign-in">

  <div style="text-align:center"><%= image_tag 'logo_white.png', alt: "Sola Salon Studios logo", :width => 200, :height => 127 %></div>

  <%= form_for :forgot_password_form do |f| %>

    <h1>Forgot Password?</h1>

    <% if @error %>
      <div id="error"><%= @error.html_safe %></div>
    <% end %>

    <% if @success %>
      <div id="success"><%= @success.html_safe %></div>
    <% end %>

    <div class="field">
      <label>Username</label>
      <input type="text" name="username" value="<%= params[:username] %>" autofocus="autofocus">
    </div>

    <div class="actions">
      <button type="submit">Submit</button>
    </div>
  <% end %>

</div>

