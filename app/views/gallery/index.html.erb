<div class="gallery">
<div class="container content-container">
  
  <h1 class="chalet"><%= t('page.gallery.title').html_safe %></h1>

  <div class="row">
    <ul class="owl-carousel" data-paginationoff="true">
      <% if I18n.locale == :en %>
        <% (1..47).each do |number| %>
          <li><%= image_tag "https://d3p1kyyvw4qtho.cloudfront.net/gallery1/sola#{number}.jpg", :alt => 'Interior of a salon studio' %></li>
        <% end %>
      <% else %>
        <% (1..22).each do |number| %>
          <li><%= image_tag "https://d3p1kyyvw4qtho.cloudfront.net/gallery_ca/gallery#{number}.jpg", :alt => 'Interior of a salon studio' %></li>
        <% end %>
      <% end %>
    </ul>    
  </div>

  <h1 class="chalet"><%= t('page.gallery.videos').html_safe %></h1>

  <div class="row">

    <div class="one-half column">
      <a href="//www.youtube.com/watch?v=eq_UTfsHnkE" class="play-video play-video-gallery" rel="eq_UTfsHnkE">
        <%= image_tag 'video_poster_2018.jpg', :alt => 'A proud Sola salon professional leans against the wall' %>
        <span class="fa fa-play-circle"></span>
        <div class="video-overlay"></div>
      </a>
      <h1 class="video-title"><%= t('page.gallery.faces_of_sola_2018').html_safe %></h1>
      
    </div>

    <div class="one-half column">
      <a href="//www.youtube.com/watch?v=wlhDeuowaAI" class="play-video play-video-gallery" rel="wlhDeuowaAI">
        <%= image_tag 'video_poster_2017.jpg', :alt => 'A proud Sola salon professional leans against the wall' %>
        <span class="fa fa-play-circle"></span>
        <div class="video-overlay"></div>
      </a>
      <h1 class="video-title"><%= t('page.gallery.faces_of_sola_2017').html_safe %></h1>
      
    </div>

  </div>

  <div class="row">

    <div class="one-half column">
      <a href="//www.youtube.com/watch?v=St-c9SRjbhE" class="play-video play-video-gallery" rel="St-c9SRjbhE">
        <%= image_tag 'video_poster_2016.jpg', :alt => 'A smiling woman gets her hair styled by a proud salon professional' %>
        <span class="fa fa-play-circle"></span>
        <div class="video-overlay"></div>
      </a>
      <h1 class="video-title"><%= t('page.gallery.faces_of_sola_2016').html_safe %></h1>
      
    </div>

    <div class="one-half column">
      <a href="//www.youtube.com/watch?v=nbHFs0XjS8s" class="play-video play-video-gallery" rel="nbHFs0XjS8s">
        <img src="//img.youtube.com/vi/nbHFs0XjS8s/maxresdefault.jpg" alt="A woman gets her hair styled" />
        <span class="fa fa-play-circle"></span>
        <div class="video-overlay"></div>
      </a>
      <h1 class="video-title"><%= t('page.gallery.the_sola_story').html_safe %></h1>
      
    </div>

  </div>

  <div class="row">

    <div class="one-half column">
      <a href="//www.youtube.com/watch?v=i6AUSUofPUg" class="play-video play-video-gallery" rel="i6AUSUofPUg">
        <%= image_tag 'sessions_poster.jpg' %>
        <span class="fa fa-play-circle"></span>
        <div class="video-overlay"></div>
      </a>
      <h1 class="video-title"><%= t('page.gallery.the_sola_sessions').html_safe %></h1>
    </div>

    <div class="one-half column">
      <a href="//www.youtube.com/watch?v=-fWwpXeSbAM" class="play-video play-video-gallery" rel="-fWwpXeSbAM">
        <%= image_tag 'solagenius_poster.jpg' %>
        <span class="fa fa-play-circle"></span>
        <div class="video-overlay"></div>
      </a>
      <h1 class="video-title"><%= t('page.gallery.solagenius').html_safe %></h1>
    </div>

  </div>  

  <div class="row">
        <div class="one-half column">
      <a href="//www.youtube.com/watch?v=Bpe-puULbws" class="play-video play-video-gallery" rel="Bpe-puULbws">
        <%= image_tag 'sola_pro_poster.jpg' %>
        <span class="fa fa-play-circle"></span>
        <div class="video-overlay"></div>
      </a>
      <h1 class="video-title"><%= t('page.gallery.sola_pro').html_safe %></h1>
      
    </div>
  </div>

  <div class="view-more">
    <a href="https://www.youtube.com/channel/UCJ8sL_G0TVCYC1irp3HpyZg" class="button outline-large-white" target="_blank"><%= t('page.gallery.view_more_on_youtube') %></a>
  </div>

</div>
</div>

<% content_for(:title) { t('page.gallery.title').html_safe } %>
<% content_for(:canonical_url) { "https://www.solasalonstudios.#{I18n.locale != :en ? 'ca' : 'com'}/gallery" } %>
<% content_for(:meta_description) { t('page.gallery.meta_description') } %>