      <div class="item"><%= link_to :sola_pro do %><%= image_tag 'brazil/Featured_SolaPro_Desktop.jpg', :alt => "Sola Pro" %><% end %></div>
    </div>

    <div class="owl-carousel owl-theme owl-mobile">
      <div class="item"><%= link_to :sola_pro do %><%= image_tag 'brazil/Featured_SolaPro_Mobile.jpg', alt: "Sola Pro. Inspiration at Your Fingertips. Learn more." %><% end %></div>
    </div>
  <% else %>
