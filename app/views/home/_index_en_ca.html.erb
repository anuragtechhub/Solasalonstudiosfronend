<div class="container">

  <div class="row tile-row home-tile-row">
    <div class="one-half column">
      <div class="tile-mask tile-for-professionals-own-your-salon">
        <div class="content">
          <h5><%= t('page.home.for_professionals') %></h5>
          <h2><%= t('page.home.own_your_salon') %></h2>
          <ul>
            <% if I18n.locale.to_s == 'pt-BR' %>
              <li><h4>
                <%= link_to "//www.youtube.com/watch?v=D2vtblujRzo", :rel => 'D2vtblujRzo', :class => 'play-video' do %><%= t('page.home.watch_our_video') %><span class="forward-arrow-white" role="presentation"></span><% end %>
              </h4></li>
            <% else %>
              <li><h4>
                <%= link_to "//www.youtube.com/watch?v=nbHFs0XjS8s", :rel => 'nbHFs0XjS8s', :class => 'play-video' do %><%= t('page.home.watch_our_video') %><span class="forward-arrow-white" role="presentation"></span><% end %>
              </h4></li>
            <% end %>
            <li><h4><%= link_to :why_sola do %><%= t('page.why_sola.title') %><span class="forward-arrow-white" role="presentation"></span><% end %></h4></li>
