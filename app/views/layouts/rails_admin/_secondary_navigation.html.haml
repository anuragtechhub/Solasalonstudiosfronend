%ul.nav.pull-right.root_links
  - if _current_user
    - if user_link = edit_user_link
      %li.current_user= _current_user.email
    - if logout_path.present?
      %li= link_to content_tag('span', t('admin.misc.log_out'), class: 'label label-important'), logout_path, method: :delete, class: 'logout'