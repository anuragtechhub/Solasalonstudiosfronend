<div class="callout pink image">
  <div class="container">
    <h1>Looking for a Salon Professional?</h1>
    <br>
    <%= link_to 'View our directory', salon_stylists_path(@location.state, @location.city, @location.url_name), :class => 'button inverted' %>
  </div>
</div>

<a name="rent-a-studio" id="rent-a-studio"></a>
<div class="salon-request-a-tour">
  <div class="container">
    <div class="row">
      
      <div class='one-half column'>
        <h2>Contact Us for<br>Leasing&nbsp;Information</h2>
        <h3 class="subtle"><%= @location.name %></h3>
        <div class="tour-information">
          <p>Call <%= @location.general_contact_name %> for leasing information</p>
          <h1><%= @location.phone_number %></h1>
          <p class="contact-link"><a href="mailto:<%= @location.email_address_for_inquiries %>"><%= @location.email_address_for_inquiries %></a></p>
        </div>
      </div>

      <div class="one-half column">
        <%= form_tag :contact_us_request_a_tour, :method => :post, :id => 'contact-us-request-a-tour' do %>
          <input name="name" type="text" placeholder="Your Name">
          <input name="email" type="text" placeholder="Email Address">
          <input name="phone" type="text" placeholder="Phone Number (Optional)">
          <input name="location_id" type="hidden" value="<%= @location.id %>">
          <button class="big-btn">Submit Request</button>
        <% end %>
      </div>

    </div>
  </div>
</div>

