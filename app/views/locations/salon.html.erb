
<div class="location-breadcrumb">
  <div class="container">
    <%= link_to 'All Locations', :locations %> <span class="divider">/</span> <%= link_to @location.state, locations_by_state_path(@location.state) %> 
    <span class="divider">/</span> <%= link_to @location.msa.name.html_safe, region_path(@location.msa.url_name) %> 
    <span class="divider">/</span> <%= link_to @location.name, salon_location_path(@location.state, @location.city, @location.url_name) %>
  </div>
</div>

<% if @location.open_house && @location.open_house.present? %>
<div class="container">
  <div class="callout coupon pink">
    <h4><%= @location.open_house %></h4>
  </div>
</div>
<% end %>

<div class="container content-container content-container-mobile-full tablet-portrait">
  <div class="row">

    <div class="two-thirds column push-one-third">
      <div class="salon-carousel owl-carousel owl-theme" data-autoheight="true" data-autoplayoff="true">
        <% if @location.images.size > 0 %>
          <% @location.images.each do |image| %>
            <% if image.exists?(:carousel) %>
              <div class="item"><%= image_tag image.url(:carousel) %></div>
            <% else %>
              <div class="item"><%= image_tag image.url(:original) %></div>
            <% end %>
          <% end %>
        <% else %>
          <div class="item"><%= image_tag 'default_location.png' %></div>
        <% end %>
      </div>
    </div>

    <div class="one-third column salon-info pull-two-thirds content-container-mobile-padded">
      <h1><%= @location.name.html_safe %></h1>
      <h3 class="subtle"><%= @location.city.html_safe %>, <%= @location.state.html_safe %></h3>
      <div class="salon-buttons">
        <%= link_to 'Find a Salon Professional', salon_stylists_path(@location.state, @location.city, @location.url_name), :class => 'button block long-text' %>
        <%= link_to 'Rent a Studio', '#rent-a-studio', :class => 'button block rent-a-studio' %>
      </div>
      <div class="row salon-map" id="map"></div>
      <div id="map-overlay" class="salon-map"></div>
    </div>

  </div>
</div>

<% if @location.description.present? %>
  <div class="container">

    <div class="row about-this-location" style="margin-top: 60px">
      <h3 class="text-center">About this Location</h3>
      <h4 class="text-center"><%= @location.description.gsub(/<img[^>]+\>/, '').gsub(/\n/, '<hr class="br" />').html_safe %></h4>
      <% if @location.social_links_present? %>
        <ul class="social location-social">
          <% if @location.pinterest_url.present? %><li><%= link_to url_helper(@location.pinterest_url), :target => '_blank' do %><span class="ss-social-regular ss-pinterest"></span><% end %></li><% end %>
          <% if @location.twitter_url.present? %><li><%= link_to url_helper(@location.twitter_url), :target => '_blank' do %><span class="ss-social-regular ss-twitter"></span><% end %></li><% end %>
          <% if @location.facebook_url.present? %><li><%= link_to url_helper(@location.facebook_url), :target => '_blank' do %><span class="ss-social-regular ss-facebook"></span><% end %></li><% end %>
          <% if @location.instagram_url.present? %><li><%= link_to url_helper(@location.instagram_url), :target => '_blank' do %><span class="ss-social-regular ss-instagram"></span><% end %></li><% end %>
          <% if @location.yelp_url.present? %><li><%= link_to url_helper(@location.yelp_url), :target => '_blank' do %><span class="ss-social-regular ss-yelp"></span><% end %></li><% end %>
        </ul>
      <% end %>
    </div>



  </div>
<% end %>

<% if @location.move_in_special && @location.move_in_special.present? %>
  <div class="callout special">
    <h2>Move-In Special</h2>
    <p><strong><%= @location.move_in_special.html_safe %></strong></p>
    <div class="button-wrapper"><%= link_to 'Rent a Studio', '#rent-a-studio', :class => 'button rent-a-studio' %></div>
  </div>
<% end %>

<div class="callout blue image your-life-your-style">
  <div class="text-center">
    <h1>Your Life, Your Style<sup><small>&reg;</small></sup></h1>
  </div>
</div>

