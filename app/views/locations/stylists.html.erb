<div class="container content-container">
  <div class="row">

    <div class="six columns">
      <h1><%= t('page.locations.salon_professionals').html_safe %></h1>
      <h3 class="subtle"><%= @location.name %></h3>
    </div>

    <div class="six columns text-right">

      <% if @location && @location.services && @location.services.size > 0 %>
      <div class="sola-select">
        <div class="row">
          <div class="option-placeholder"><h3><%= params[:service] || t('page.locations.filter_by_service').html_safe %></h3></div>
          <div class="arrow"><span class="ss-dropdown"></span></div>
        </div>
        <div class="options">
            <div class="option" data-value="<%= salon_stylists_path(@location.url_name) %>"><%= t('page.locations.all_services').html_safe %></div>
          <% @location.services.each do |service| %>
            <div class="option" data-value="<%= salon_stylists_path(@location.url_name, service) %>"><%= service %></div>
          <% end %>
        </div>
      </div>
      <% end %>

    </div>

  </div>
</div>

<div class="container">
  <div class="callout green coupon small">
    <h4><strong><%= t('page.locations.contact_your_salon_professional_directly').html_safe %></strong></h4>
  </div>
</div>

<div class="container content-container">
  <div class="row">

    <% if @stylists && @stylists.size > 0 %>
      <% @stylists.sort_by(&:name).each_with_index do |stylist, index| %>
        <% if index == 0 || index % 3 == 0 %><div class="row"><% end %>
          <div class="one-third column search-result stylist">
            <h3 class="salon-professional-name"><%= link_to show_salon_professional_path(stylist) do %><%= stylist.website_name.present? ? stylist.website_name.html_safe : stylist.name.html_safe %><% end %></h3>
            <h3 class="subtle business-name"><%= stylist.business_name.present? ? stylist.business_name.html_safe : '&nbsp;'.html_safe %><br>Studio <%= stylist.studio_number %></h3>
            <p class="salon-services">
              <% if stylist.services && stylist.services.size > 0 %>
                <% stylist.services.each do |service| %>
                  <span class="service" data-service="<%= service %>"><%= service %></span>
                <% end %>
              <% else %>
                <span class="service" style="visibility:hidden">&nbsp;</span>
              <% end %>
            </p>
            <div><%= ((stylist.phone_number.present? || stylist.website_phone_number.present?) && stylist.phone_number_display) ? (stylist.website_phone_number.present? ? stylist.website_phone_number : stylist.phone_number) : '&nbsp;'.html_safe %></div>
            <div class='view-profile'><%= link_to t('page.locations.view_profile').html_safe, show_salon_professional_path(stylist) %></div>
          </div>
        <% if ((index + 1) % 3) == 0 || index + 1 == @stylists.size %></div><% end %>
      <% end %>
    <% end %>

  </div>
</div>

<% content_for(:scripts) { javascript_include_tag('salon_stylists'); } %>
<% content_for(:scripts) {@location.tracking_code.html_safe} if @location.tracking_code.present? %>
<% content_for(:title) { "#{t('page.locations.salon_professionals_at').html_safe} #{@location.name} #{t(:in)} #{@location.city}, #{@location.state}" } %>
