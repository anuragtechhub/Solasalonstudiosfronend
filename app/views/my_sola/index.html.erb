<div class="mysola-tabs-content">
  <div class="mysola-tab-content" style="display:block;min-height:60px" data-tab="upload-a-photo">
    <%= react_component 'MySolaGallery', {:images => @gallery_images} %>
  </div>
  <div class="mysola-tab-content" data-tab="my-sola-mondays">
    <div class="container">
      <div class="mysola-posts-container" style="margin-top: 60px">
        <% @posts.each_with_index do |post, index| %>
          <% if index == 0 || index % 3 == 0 %><div class="row"><% end %>

          <div class="four columns">
            <%= render 'shared/mysola_blog_post_summary', :post => post %>
          </div>

          <% if ((index + 1) % 3) == 0 || index + 1 == @posts.size %></div><% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% content_for(:title) { "#MySola" } %>
<% content_for(:canonical_url) { "https://www.solasalonstudios.#{I18n.locale != :en ? 'ca' : 'com'}/mysola" } %>