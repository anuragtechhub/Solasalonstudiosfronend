<% if I18n.locale.to_s == 'pt-BR' %>

  <div class="hero-carousel owl-carousel owl-theme">
    <div class="item">
      <div class="img-wrap"><%= image_tag 'https://s3.amazonaws.com/solasalonstudiosbr/pages/why_sola/WhySola_Hero.jpg', alt: "Photo of the master.", :width => 1600, :height => 800 %></div>
      <div class="item-content overlayed">
        <h1 class="chalet"><%= t('page.why_sola.hero_heading1').html_safe %></h1>
        <h1 class="chalet-new-york"><%= t('page.why_sola.hero_heading2').html_safe %></h1>
        <%= link_to '//www.youtube.com/watch?v=D2vtblujRzo', :class => "button primary play-video rounded-play-button paralax-hidable-desktop" do %>
          <span><%= t('page.why_sola.hero_button_text') %></span> <span class="fa fa-play-circle"></span>
        <% end %>
        <div class="learn-more-button">
          <h5><%= t('page.why_sola.learn_more') %></h5>
          <span class="fa fa-angle-down"></span>
        </div>
      </div>
    </div>
  </div>

<% else %>
<!--  -->
  <%- youtube_url = "https://www.youtube.com/watch?v=#{I18n.locale != :en ? (I18n.locale.to_s == 'en-CA' ? 'U-1b_0MWs-8' : 'zH9uewppEjk') : 'dDVuCRNTuv8'}" %>
  <div class="hero-carousel owl-carousel owl-theme home-all">
    <div class="item" style=" ">
      <!--parallax-window -->
        <div class="img-wrap top-header parallax-dream-again-image <%= 'canada' if I18n.locale.to_s == 'en-CA'%>" data-parallax="scroll" data-z-index="1" data-natural-width="1920" data-natural-heigt="730" data-image-src="https://d3p1kyyvw4qtho.cloudfront.net/own_your_salon/<%= I18n.locale.to_s == 'en-CA' ? 'Sola_ImagineIf_Canada-GIF.gif' : 'WhySolaHeader1.gif' %>">
          <div class="item-content overlayed" style="top:0px;">
            <%= link_to youtube_url, :class => "button secondary play-video rounded-play-button paralax-hidable-desktop" do %>
              <span><%= t('page.why_sola.hero_button2_text') %></span> <span class="fa fa-play-circle"></span>
            <% end %>
          </div>
        </div>

    </div>
  </div>

  <div class="hero-carousel owl-carousel owl-theme home-mobile">
    <div class="item">
      <div class="img-wrap" style="padding-bottom:39%;"><%= image_tag "https://d3p1kyyvw4qtho.cloudfront.net/own_your_salon/#{I18n.locale.to_s == 'en-CA' ? 'CANADA_whysola_header_mobile.gif' : 'US_whysola_header_mobile.gif'}", :alt => t('page.home.slider5_heading') %></div>
      <div class="item-content overlayed">
        <%= link_to youtube_url, style: "margin-top:0px;", :class => "button secondary play-video rounded-play-button paralax-hidable-mobile" do %>
          <span><%= t('page.why_sola.hero_button2_text') %></span> <span class="fa fa-play-circle"></span>
        <% end %>
        <%= link_to '#why_sola', class: 'arrow-link' do %>
          <i class="fa fa-angle-down text-center"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
