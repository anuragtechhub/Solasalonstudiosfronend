<div class="own-your-salon">

  <%= render 'own_your_salon' %>
  <%= render 'our_studios' %>
  <%= render 'sola_pro' %>
  <% if I18n.locale.to_s != 'pt-BR' %>
    <%= render 'sola_sessions' %>
  <% end %>
  <% if I18n.locale.to_s == 'en' %>
    <%= render 'sola_genius' %>
  <% end %>
  
  <%= javascript_include_tag 'fullscreen_hero' %>

</div>

<% content_for(:scripts) { javascript_include_tag('own_your_salon') } %>
<% content_for(:title) { raw(t('page.own.title')) } %>

<% if request.fullpath.include? 'own/sola-sessions' %>
  <% content_for(:meta_description) { t('page.own.section.sola_sessions.meta_description') } %>
  <% content_for(:canonical_url) { "https://www.solasalonstudios.#{I18n.locale != :en ? 'ca' : 'com'}/own/sola-sessions" } %>
<% elsif request.fullpath.include? 'own/our-studios' %>
  <% content_for(:meta_description) { t('page.own.section.our_studios.meta_description') } %>
  <% content_for(:canonical_url) { "https://www.solasalonstudios.#{I18n.locale != :en ? 'ca' : 'com'}/own/our-studios" } %>
<% elsif request.fullpath.include? 'own/sola-pro' %>
  <% content_for(:meta_description) { t('page.own.section.sola_pro.meta_description') } %>
  <% content_for(:canonical_url) { "https://www.solasalonstudios.#{I18n.locale != :en ? 'ca' : 'com'}/own/sola-pro" } %>
<% elsif request.fullpath.include? 'own/sola-genius' %>
  <% content_for(:meta_description) { t('page.own.section.sola_genius.meta_description') } %>
  <% content_for(:canonical_url) { "https://www.solasalonstudios.#{I18n.locale != :en ? 'ca' : 'com'}/own/sola-genius" } %>
<% else %>
  <% content_for(:meta_description) { t('page.own.meta_description') } %>
  <% content_for(:canonical_url) { "https://www.solasalonstudios.#{I18n.locale != :en ? 'ca' : 'com'}/own-your-salon" } %>
<% end %>