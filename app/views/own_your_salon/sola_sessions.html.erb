<%= render 'shared/public_website/own_your_salon_nav', :page => :sola_sessions %>

<div class="sola-sessions">

  <div class="hero-carousel owl-carousel owl-theme">
    <div class="item">
      <div class="img-wrap"><%= image_tag 'Sessions_Hero.jpg', :width => 1600, :height => 800 %></div>
      <div class="item-content overlayed">
        <%= image_tag 'Sessions_Logo@2x.png', :class => 'sessions-logo' %>
        <h1 class="chalet"><%= t('page.sola_sessions.inspiration_education_community').html_safe %></h1>
        <%= link_to :own_your_salon, :class => "button primary play-video rounded-play-button" do %><%= t('page.sola_sessions.hero_button_text') %> <span class="fa fa-play-circle">&nbsp;</span><% end %>
        <div class="learn-more-button">
          <h5><%= t('page.sola_sessions.learn_more') %></h5>
          <span class="fa fa-angle-down"></span>
        </div>
      </div>
    </div>
  </div>


</div>

<% content_for(:title) { t('page.sola_sessions.title').html_safe } %>
<% content_for(:canonical_url) { "https://www.solasalonstudios.#{I18n.locale != :en ? 'ca' : 'com'}/sola-sessions" } %>
<% content_for(:meta_description) { t('page.sola_sessions.meta_description') } %>