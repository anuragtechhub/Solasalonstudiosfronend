  <div id="buy_ticket">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-7">
          <h4>
            Space is limited. Reserve your spot now!
            <br>
            Early Bird Tickets On Sale: Monday, February 7th
          </h4>
          <div class="sub-title">
            All ticket prices will increase on Monday, March 7th
          </div>
        </div>
      </div>
      <div class="row tickets-wrapper">
        <% tickets.each do |ticket| %>
          <% type = ticket[:type] %>

          <div class="col-12 col-lg-4">
            <div class="ticket-details <%= type.downcase %>">
              <div class="ticket-main">
                <div class="ticket-title"><%= "#{type} Ticket" %></div>
                <div class="ticket-special-price"><%= "$#{ticket[:special_price]}" %></div>
                <div class="ticket-early-bird"><%= "Early Bird: $#{ticket[:special_price]}" %></div>
                <div class="ticket-normal-price"><%= "Price increases to $#{ticket[:normal_price]}" %></div>
              </div>

              <div class="ticket-description">
                <% ticket[:days].each do |day_title, features| %>
                  <div class="mb-4">
                    <div class="ticket-day-title"><%= day_title.capitalize %></div>
                    <div class="ticket-features">
                      <% features.each do |feature| %>
                        <div class="ticket-feature">
                          <i></i>
                          <div><%= feature %></div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>

              <div class="ticket-buy">
                <a href="https://www.eventbrite.com/e/the-sola-sessions-tickets-233815357027" target="_blank" class="buy-ticket-btn btn">buy ticket</a>
                <div class="buy-ticket-comment">*Includes One Drink Ticket</div>
              </div>
            </div>
          </div>
        <% end %>
