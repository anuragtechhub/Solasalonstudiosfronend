<%= render 'shared/public_website/own_your_salon_nav', :page => :why_sola %>

<div class="why-sola why-sola-2">

  <div class="hero-carousel owl-carousel owl-theme">
    <div class="item">
      <% if I18n.locale.to_s == 'pt-BR' %>
        <div class="img-wrap"><%= image_tag 'https://s3.amazonaws.com/solasalonstudiosbr/pages/why_sola/WhySola_Hero.jpg', :width => 1600, :height => 800 %></div>
      <% else %>
        <div class="img-wrap"><%= image_tag 'WhySola/WhySola_Hero.gif', :width => 1600, :height => 804 %></div>
      <% end %>
      <div class="item-content overlayed">
        <h1 class="chalet"><%= t('page.why_sola.hero_heading1').html_safe %></h1>
        <h1 class="chalet-new-york"><%= t('page.why_sola.hero_heading2').html_safe %></h1>
        <% if I18n.locale.to_s == 'pt-BR' %>
          <%= link_to '//www.youtube.com/watch?v=D2vtblujRzo', :class => "button primary play-video rounded-play-button" do %>
            <%= t('page.why_sola.hero_button_text') %> <span class="fa fa-play-circle">&nbsp;</span>
          <% end %>
        <% else %>
          <%= link_to '//www.youtube.com/watch?v=eq_UTfsHnkE', :class => "button primary play-video rounded-play-button" do %>
            <%= t('page.why_sola.hero_button_text') %> <span class="fa fa-play-circle">&nbsp;</span>
          <% end %>
        <% end %>
        <div class="learn-more-button">
          <h5><%= t('page.why_sola.learn_more') %></h5>
          <span class="fa fa-angle-down"></span>
        </div>
      </div>
    </div>
  </div>

  <div class="container content-container">
    <div class="row">
      <div class="six columns">
        <h2><%= t('page.why_sola.be_in_business_heading') %></h2>
        <p><%= t('page.why_sola.be_in_business_p1').html_safe %></p>
        <p><%= t('page.why_sola.be_in_business_p2').html_safe %></p>
        <% if I18n.locale.to_s == 'en' %>
          <h2>Intrigued by the idea of being your own boss?</h2>
          <p>Download our free guide to discover if the independent life is right for you!</p>
          <p><a href="/goingindependent" class="button primary">Download now</a></p>
        <% end %>        
      </div>
      <div class="six columns">
        <% if I18n.locale.to_s == 'pt-BR' %>
          <%= image_tag 'https://s3.amazonaws.com/solasalonstudiosbr/pages/why_sola/banner+sidebar/WhySola_2.png', :class => 'u-full-width' %>
        <% else %>
          <%= image_tag 'WhySola/WhySola_2.png', :class => 'u-full-width' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="sola-freedom">
    <h2 class="text-center"><%= t('page.why_sola.freedom_heading') %></h2>
    <div class="container">
      <div class="row">
        <div class="three columns">
          <div class="freedom-tile">
            <span class="icon lock"></span>
            <span class="text"><%= t('page.why_sola.freedom_tile_1') %></span>
          </div>
        </div>
        <div class="three columns">
          <div class="freedom-tile">
            <span class="icon price"></span>
            <span class="text"><%= t('page.why_sola.freedom_tile_2') %></span>
          </div>
        </div>
        <div class="three columns">
          <div class="freedom-tile">
            <span class="icon clock"></span>
            <span class="text"><%= t('page.why_sola.freedom_tile_3') %></span>
          </div>
        </div>
        <div class="three columns">
          <div class="freedom-tile">
            <span class="icon chat"></span>
            <span class="text"><%= t('page.why_sola.freedom_tile_4') %></span>
          </div>
        </div>                        
      </div>

      <div class="row">
        <div class="three columns">
          <div class="freedom-tile">
            <span class="icon music"></span>
            <span class="text"><%= t('page.why_sola.freedom_tile_5') %></span>
          </div>
        </div>
        <div class="three columns">
          <div class="freedom-tile">
            <span class="icon heart"></span>
            <span class="text"><%= t('page.why_sola.freedom_tile_6') %></span>
          </div>
        </div>
        <div class="three columns">
          <div class="freedom-tile">
            <span class="icon wifi"></span>
            <span class="text"><%= t('page.why_sola.freedom_tile_7') %></span>
          </div>
        </div>
        <div class="three columns desktop-only">
          <div class="freedom-tile active-tile">
            <span class="text"><%= t('page.why_sola.freedom_tile_8') %></span>
            <%= link_to :locations do %><%= t('page.why_sola.freedom_tile_8_link') %><% end %>
          </div>
        </div>                        
      </div>

      <% if I18n.locale.to_s == 'en' %>
        <%= render 'shared/contact_form_component', :required_fields => [:name, :email, :how_can_we_help_you] %>
      <% end %>

      <div class="row mobile-only">
        <div class="three columns">
          <div class="freedom-tile active-tile">
            <span class="text"><%= t('page.why_sola.freedom_tile_8') %></span>
            <%= link_to :locations do %><%= t('page.why_sola.freedom_tile_8_link') %><% end %>
          </div>
        </div>
      </div>

      <p class="text-center"><%= t('page.why_sola.freedom_text') %></p>
    </div>
  </div>

  <div class="sola-flexibility">
    <div class="container">
      <h1 class="chalet"><%= t('page.why_sola.flexibility_statement') %></h1>
      <p><%= t('page.why_sola.flexibility_subhead1') %></p>
      <div class="bottom-copy">
        <p><%= t('page.why_sola.flexibility_subhead2') %></p>
        <p><%= t('page.why_sola.flexibility_subhead3') %></p>
      </div>
    </div>
  </div>

  <div class="sola-benefits">
    <div class="container">
      
      <h2 class="text-center"><%= t('page.why_sola.beautiful_studios_exclusive_perks').html_safe %></h2>
      <p class="text-center"><%= t('page.why_sola.at_sola_you_get_more') %></p>
      
      <div class="row">
        <div class="<% if I18n.locale.to_s == 'pt-BR' %>offset-by-two<% end %> columns four">
          <%= link_to :our_studios, :class => 'benefit-tile' do %>
            <div class="img-wrap">
              <% if I18n.locale.to_s == 'pt-BR' %>
                <%= image_tag 'https://s3.amazonaws.com/solasalonstudiosbr/pages/why_sola/banner+footer/OurStudios.jpg' %>
              <% else %>
                <%= image_tag 'WhySola/OurStudios.jpg' %>
              <% end %>
              <div class="title-wrapper"><span class="title"><%= t('page.why_sola.beautiful_studios') %></span></div>
            </div>
            <span class="text"><%= t('page.why_sola.beautiful_studios_text') %></span>
          <% end %>
        </div>
        <% if I18n.locale.to_s != 'pt-BR' %>
          <div class="columns four">
            <%= link_to :blog, :class => 'benefit-tile' do %>
              <div class="img-wrap">
                <%= image_tag 'WhySola/Community_Support.jpg' %>
                <div class="title-wrapper"><span class="title"><%= t('page.why_sola.sola_blog') %></span></div>
              </div>
              <span class="text"><%= t('page.why_sola.sola_blog_text') %></span>
            <% end %>
          </div>
        <% end %>
        <div class="columns four">
          <%= link_to 'https://www.solasalonstudios.com/blog/is-it-time-to-update-your-sola-website', :class => 'benefit-tile' do %>
            <div class="img-wrap">
              <%= image_tag 'WhySola/Webpage.jpg' %>
              <div class="title-wrapper"><span class="title"><%= t('page.why_sola.your_own_sola_webpage') %></span></div>
            </div>
            <span class="text"><%= t('page.why_sola.your_own_sola_webpage_text') %></span>
          <% end %>
        </div>        
      </div>

      <div class="row">
        <div class="<% if I18n.locale.to_s != 'en' %>offset-by-two<% end %> columns four">
          <%= link_to :sola_pro, :class => 'benefit-tile' do %>
            <div class="img-wrap">
              <% if I18n.locale.to_s == 'en' %>
                <%= image_tag 'WhySola/SolaPro.jpg' %>
              <% else %>
                <%= image_tag 'WhySola/SolaPro_ca.jpg' %>
              <% end %>
              <div class="title-wrapper"><span class="title"><%= t('page.why_sola.sola_pro') %></span></div>
            </div>
            <span class="text"><%= t('page.why_sola.sola_pro_text') %></span>
          <% end %>
        </div>
        <div class="columns four">
          <%= link_to :sola_sessions, :class => 'benefit-tile' do %>
            <div class="img-wrap">
              <%= image_tag 'WhySola/SolaSessions.jpg' %>
              <div class="title-wrapper"><span class="title"><%= t('page.why_sola.sola_sessions') %></span></div>
            </div>
            <span class="text"><%= t('page.why_sola.sola_sessions_text') %></span>
          <% end %>
        </div>
        <% if I18n.locale.to_s == 'en' %>
          <div class="columns four">
            <%= link_to :solagenius, :class => 'benefit-tile' do %>
              <div class="img-wrap">
                <%= image_tag 'WhySola/SolaGenius.jpg' %>
                <div class="title-wrapper"><span class="title"><%= t('page.why_sola.solagenius') %></span></div>
              </div>
              <span class="text"><%= t('page.why_sola.solagenius_text') %></span>
            <% end %>
          </div>  
        <% end %>      
      </div>

    </div> <!-- container -->
  </div> <!-- sola-benefits -->

  <div class="search-for-a-salon">
    <div class="container">

      <h1 class="chalet"><%= t('page.why_sola.dont_just_dream_do') %></h1>
      <h1 class="chalet-new-york"><%= t('page.why_sola.become_a_salon_owner') %></h1>
      
      <% if I18n.locale.to_s != 'pt-BR' %>
        <p><%= t('page.why_sola.search_for_a_salon') %></p>

        <div class="row">
          <div class="twelve columns">
            <form class="search-form search-salon" action="<%= find_salon_location_path %>">
              <div class="search-input-with-button">
                <span class="spyglass-black"></span>
                <input name="query" type="text" class="searchbox" placeholder="<%= t('page.home.search_location') %>" />
                <button type="submit"><%= t('page.why_sola.search') %></button>
              </div>
            </form>
          </div>
        </div>

        <div class="salon-search-results"></div>
        <div class="salon-search-spinner">
          <div class="spinner">&nbsp;</div>
        </div>

        <div class="view-all-locations"><%= link_to :locations do %><%= t('page.why_sola.view_all_locations') %><% end %></div>
      <% end %>

      <% if I18n.locale.to_s == 'en' %>
        <%= render 'shared/contact_form_component', :required_fields => [:name, :email, :how_can_we_help_you] %>
      <% end %>

    </div>
  </div>

</div> <!-- why-sola -->

<div class="floating-find-a-studio">
  <%= link_to :contact_us, :class => "button primary" do %>
    <%= t('page.why_sola.contact_us') %>
  <% end %>
</div>

<% content_for(:scripts) { javascript_include_tag('search_salon') } %>
<% content_for(:scripts) { javascript_include_tag('why_sola') } %>
<% content_for(:title) { t('page.why_sola.title').html_safe } %>
<% content_for(:canonical_url) { "https://www.solasalonstudios.#{I18n.locale != :en ? 'ca' : 'com'}/why-sola" } %>
<% content_for(:meta_description) { t('page.why_sola.meta_description') } %>
<% content_for(:meta_tags) do %>
<META NAME="ROBOTS" CONTENT="NOINDEX, NOFOLLOW">
<% end %>