- if @abstract_model.to_s == 'UpdateMySolaWebsite' && @object.approved
  %div.alert.alert-warning
    %div This request has already been approved. Redirecting to dashboard automatically in 5 seconds...
  :css
    .breadcrumb, .nav-tabs { display: none; }
  :javascript
    $(function () {
      setTimeout(function () {
        window.location.href = "https://" + location.host + '/admin/';
      }, 5000);
    });    
- else
  - if @abstract_model.to_s == 'UpdateMySolaWebsite'
    :css
      fieldset {
        margin-top: 15px !important;
      }
      fieldset.first {
        margin-top: 0 !important;
      }
    :javascript
      $(function () {
        $('#edit_update_my_sola_website fieldset').first().addClass('first');
      });
  = rails_admin_form_for @object, url: edit_path(@abstract_model, @object.id), as: @abstract_model.param_key, html: { method: "put", multipart: true, class: "form-horizontal denser", data: { title: @page_name } } do |form|
    = form.generate action: :update