<!-- UNIQUE VISITS and NEW VS RETURNING -->
<!-- ********************************** -->

<div class="grid">
  
  <div class="col-1-2">
    <div class="section">
      <div class="section-heading">Unique Visits</div>
      <div class="section-subhead">Visits + 1st Time Visitors</div>
    </div>
    <table class="tabular" cellpadding="0" cellspacing="0">
      <tr>
        <td class="value value-large"><%= number_with_delimiter @data[:unique_visits][1][1].to_i + @data[:unique_visits][2][1].to_i %></td>
        <td class="label">People visited the site</td>
      </tr>
      <tr>
        <td class="value value-large"><%= number_with_delimiter @data[:unique_visits][1][1] %></td>
        <td class="label">First-time visits to the site</td>
      </tr>
      <tr>
        <td class="value value-large"><%= number_with_delimiter @data[:unique_visits][2][1] %></td>
        <td class="label">Return visits to the site</td>
      </tr>
    </table>
  </div>

  <div class="col-1-2">
    <div class="section">
      <div class="section-heading">NEW VS. RETURNING</div>
      <div class="section-subhead">Who Came Back?</div>
    </div>
    
    <div class="grid">
      <div class="col-2-3">
        <%
          @data[:unique_visits_total] = @data[:unique_visits][1][1].to_i + @data[:unique_visits][2][1].to_i
          @data[:new_visitors_percentage] = 100 * @data[:unique_visits][1][1].to_i / @data[:unique_visits_total]
          @data[:returning_visitors_percentage] = 100 * @data[:unique_visits][2][1].to_i / @data[:unique_visits_total]
        %>
        <div class="horizontal-bar-chart">
          <div class="bar-label">New Visitors</div>
          <div class="bar bar-green" style="width:<%= number_to_percentage @data[:new_visitors_percentage] %>">
            <div class="value"><%= number_to_percentage @data[:new_visitors_percentage], :precision => 0 %></div>
          </div>
          <div class="bar-label">Returning Visitors</div>
          <div class="bar bar-pink" style="width:<%= number_to_percentage @data[:returning_visitors_percentage] %>">
            <div class="value"><%= number_to_percentage @data[:returning_visitors_percentage], :precision => 0 %></div>
          </div>
        </div>
      </div>

      <div class="col-1-3">
        <%
          @data[:unique_visits_prev_month_total] = @data[:unique_visits_prev_month][1][1].to_i + @data[:unique_visits_prev_month][2][1].to_i
          @data[:new_visitors_prev_month_percentage] = 100 * @data[:unique_visits_prev_month][1][1].to_i / @data[:unique_visits_prev_month_total]
        %>
        <div class="change-vs-previous-month">
          New Visitor % Change
          <span class="percentage"><%= number_to_percentage (@data[:new_visitors_percentage] - @data[:new_visitors_prev_month_percentage]), :precision => 0 %></span>
          Vs. <%= (@data[:start_date].prev_month).strftime("%B %Y") %> 
        </div>
      </div>
    </div>

  </div>
</div>



