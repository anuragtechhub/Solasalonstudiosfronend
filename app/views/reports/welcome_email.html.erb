<div style="text-align:center;margin:0 auto 5px auto;" class="sola-logo"><%= wicked_pdf_image_tag 'logo_blue.png', width: (368 / 5), height: (221 / 5) %></div>
<div class="page-title"><strong><%= @data[:start_date].strftime("%B %Y").upcase %> &nbsp;<span style="font-weight:normal;position:relative;top:-2px">|</span>&nbsp; Welcome Email Analytics</strong></div>

<table class="dotted" cellpadding="0" cellspacing="0">
	<tr>
    <td>
      <div class="label">Delivered</div>
      <div class="value value-large"><%= number_with_delimiter @data[:metrics]['delivered'] %></div>
    </td>
    <td>
      <div class="label">Opens</div>
      <div class="value value-large"><%= number_with_delimiter @data[:metrics]['unique_opens'] %></div>
    </td>    
    <td>
      <div class="label">Clicks</div>
      <div class="value value-large"><%= number_with_delimiter @data[:metrics]['clicks'] %></div>
    </td>    
  </tr>
	<tr>
    <td>
      <div class="label">Bounces</div>
      <div class="value value-large"><%= number_with_delimiter @data[:metrics]['bounces'] %></div>
    </td>
    <td>
      <div class="label">Blocks</div>
      <div class="value value-large"><%= number_with_delimiter @data[:metrics]['blocks'] %></div>
    </td>    
    <td>
      <div class="label">Spam Reports</div>
      <div class="value value-large"><%= number_with_delimiter @data[:metrics]['spam_reports'] %></div>
    </td>    
  </tr>  
</table>

<table class="tabular tabluar-tight" cellpadding="0" cellspacing="0" style="table-layout: fixed;">
  <tr>
    <th><strong>Date</strong></th>
    <th><strong>Delivered</strong></th>
    <th><strong>Opens</strong></th>
    <th><strong>Clicks</strong></th>
    <th><strong>Bounces</strong></th>
    <th><strong>Blocks</strong></th>
    <th><strong>Spam Reports</strong></th>
  </tr>
  <% @data[:rows].each do |row| %>
    <tr>
      <td class="label" style="font-size:9px"><%= row['date'] %></td>
      <td class="label" style="font-size:9px"><%= number_with_delimiter row['stats'].first['metrics']['delivered'] %></td>
      <td class="label" style="font-size:9px"><%= number_with_delimiter row['stats'].first['metrics']['unique_opens'] %></td>
      <td class="label" style="font-size:9px"><%= number_with_delimiter row['stats'].first['metrics']['clicks'] %></td>
      <td class="label" style="font-size:9px"><%= number_with_delimiter row['stats'].first['metrics']['bounces'] %></td>
      <td class="label" style="font-size:9px"><%= number_with_delimiter row['stats'].first['metrics']['blocks'] %></td>
      <td class="label" style="font-size:9px"><%= number_with_delimiter row['stats'].first['metrics']['spam_reports'] %></td>
    </tr>
  <% end %>
</table> 