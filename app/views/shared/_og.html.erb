<meta property="og:site_name" content="<%= t('brand_name').html_safe %>">

<% if content_for?(:title) %>
  <meta property="og:title" content="<%= yield(:title).html_safe %>">
<% end %> 

<% if defined?(@hide_og_type) && @hide_og_type == true %>
  <!-- no og type -->
<% else %>
  <meta property="og:type" content="website">
<% end %>

<meta property="og:url" content="<%= request.original_url %>">

<% if content_for?(:og_image) %>
  <meta property="og:image" content="<%= yield(:og_image).html_safe.gsub(/https/, 'http') %>">
<% else %>
  <meta property="og:image" content="http://s3.amazonaws.com/solasalonstudios/sola-social-share.png">
<% end %>

<% if content_for?(:og_description) %>
  <meta property="og:description" content="<%= yield(:og_description).html_safe %>">
<% end %>