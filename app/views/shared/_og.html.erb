<meta property="og:site_name" content="Sola Salon Studios" />

<% if content_for?(:title) %>
  <meta property="og:title" content="<%= yield(:title).html_safe %>" />
<% end %> 

<meta property="og:type" content="website" />

<meta property="og:url" content="<%= request.original_url %>" />

<% if content_for?(:og_image) %>
  <meta property="og:image" content="<%= yield(:og_image).html_safe %>" />
<% else %>
  <meta property="og:image" content="https://s3.amazonaws.com/solasalonstudios/sola_logo_social.png" />
<% end %>

<% if content_for?(:og_description) %>
  <meta property="og:description" content="<%= yield(:og_description).html_safe %>" />
<% end %>