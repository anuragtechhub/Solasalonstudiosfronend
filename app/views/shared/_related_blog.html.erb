<div class="related-blog">
  <%= link_to show_blog_path(blog) do %>
    <%= image_tag blog.image(:original), :class => 'full-width' %>
    <h4><%= blog.title.html_safe %></h4>
    <p class="subtle">Posted on <%= blog.created_at.strftime('%B %e, %Y') %><br><%= blog.author.html_safe %></p>
  <% end %>
</div>