<div class="sola-spotlights">
  <div class="container">
    <h2><%= t('page.blog.sola_spotlight').html_safe %></h2>
  </div>

  <div class="carousel-container container">
    <div class="owl-carousel owl-theme" data-items="3" data-autoplayoff="true" data-paginationoff="true">
      <% Blog.joins(:blog_categories, :blog_blog_categories).where('blog_blog_categories.blog_category_id = ?', 4).order(:created_at => :desc).uniq.each do |blog| %>
        <% if blog.carousel_image.present? %>
          <div class="item sola-spotlight">
            <%= link_to show_blog_path(blog.url_name) do %>
              <%= image_tag blog.carousel_image(:carousel), alt: "#{blog.title} image" %>
              <div class="carousel-text-bottom">
                <h2><%= blog.carousel_text %></h2>
                <h5><%= t('page.blog.sola_spotlight').html_safe %></h5>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
