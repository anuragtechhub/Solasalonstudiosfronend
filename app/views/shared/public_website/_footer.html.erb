<div id="footer">
  <div class="container">
    
    <div class="row first">
      
      <div class="one-third column first">
        <%= link_to raw(t('footer.rent_studio_button')), :contact_us, :class => 'button outline-large-white', :style => 'margin-bottom:0;' %>
      </div>
      
      <div class="one-third column second">
        <h4><%= raw t 'footer.second_column_heading' %></h4>
        <div class="row">
          <div class="one-half column">
            <ul class="p">
              <li><%= link_to raw(t('page.contact.title')), :contact_us %></li>
              <li><%= link_to raw(t('page.news.title')), :news %></li>
              <li><%= link_to raw(t('page.testimonials.title')), :testimonials %></li>
              <!--<li><%= link_to raw(t('page.faqs.title')), :faqs %></li>-->
              <li><%= link_to raw(t('page.blog.title')), :blog %></li>
            </ul>
          </div>
          <div class="one-half column last">
            <ul class="p last">
              <li><%= link_to raw(t('page.own.title')), :own_your_salon %></li>
              <li><%= link_to raw(t('page.find_salon_pro.title')), :salon_professionals %></li>
              <li><%= link_to raw(t('page.locations.title_long')), :locations %></li>
              <li><%= link_to raw(t('page.gallery.title')), :gallery %></li>
              <li><%= link_to raw(t('page.privacy_policy.title')), :privacy_policy %></li>
            </ul>
          </div>
        </div>
      </div>
      
      <div class="one-third column third">
        <h4><%= raw t 'footer.third_column_heading' %></h4>

        <p><%= raw t 'footer.join_newsletter' %></p>
        
        <%= form_tag :newsletter_sign_up, :class => 'footer-newsletter-sign-up' do %>
          <div class="newsletter-sign-up">
            <input type="email" name="email" class="input" placeholder="<%= raw t 'footer.email_placeholder' %>" >
            <button type="submit" class="button"><%= raw t 'footer.join_button' %></button>
          </div>
        <% end %>

        <ul class="social">  
          <% if I18n.locale == :en %>        
            <li><%= link_to 'https://www.facebook.com/solasalons', :target => '_blank' do %><span class="ss-social-regular ss-facebook"></span><% end %></li>
            <li><%= link_to 'https://twitter.com/solasalons', :target => '_blank' do %><span class="ss-social-regular ss-twitter"></span><% end %></li>
            <li><%= link_to 'https://www.pinterest.com/solasalons/', :target => '_blank' do %><span class="ss-social-regular ss-pinterest"></span><% end %></li>
            <li><%= link_to 'https://instagram.com/solasalons/', :target => '_blank' do %><span class="ss-social-regular ss-instagram"></span><% end %></li>
          <% else %>
            <li><%= link_to 'https://www.facebook.com/solacanada', :target => '_blank' do %><span class="ss-social-regular ss-facebook"></span><% end %></li>
            <li><%= link_to 'https://twitter.com/solacanada', :target => '_blank' do %><span class="ss-social-regular ss-twitter"></span><% end %></li>
            <li><%= link_to 'https://www.pinterest.com/solasalons/', :target => '_blank' do %><span class="ss-social-regular ss-pinterest"></span><% end %></li>
            <li><%= link_to 'https://instagram.com/solacanada/', :target => '_blank', :style => 'margin-right:0;' do %><span class="ss-social-regular ss-instagram"></span><% end %></li>
          <% end %>
        </ul>
      </div>

    </div>

    <div class="row second">
      <p><%= raw t 'footer.legal' %> <%= Time.now.year %></p>
    </div>

  </div>
</div>