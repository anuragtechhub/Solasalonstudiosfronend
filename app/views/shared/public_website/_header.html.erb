<div id="header">
  <div class="container">
    <div class="row">

      <div id="mobile-top-nav-button"></div>

      <%= link_to :home, :class => 'logo' do %><%= image_tag 'Sola_Logo_@2x.png', :width => 133, :height => 81, :alt => raw(t('brand_name')) %><% end %>
      
      <ul class="nav">
        <li><h4><%= link_to raw(t('page.own.title')), :own_your_salon, :class => 'own_your_salon', 'data-nav' => "own-your-salon" %></h4></li>
        <li><h4><%= link_to raw(t('page.about.title')), :about_us, :class => 'about_us', 'data-nav' => "about-us" %></h4></li>
        <li><h4><%= link_to raw(t('page.locations.title')), :locations %></h4></li>
        <li><h4><%= link_to raw(t('page.find_salon_pro.title')), :salon_professionals %></h4></li>
        <li><h4><%= link_to raw(t('page.blog.title')), :blog %></h4></li>
      </ul>

      <%= form_tag [:search, :results], :method => :get, :class => 'nav-search' do %>
        <input class="nav-search-input" placeholder="<%= raw t 'header.search_placeholder' %>" type="search" name="query">
        <span class="nav-search-button search-icon"></span>
      <% end %>

    </div>
  </div>
</div>



