<div id="header">
  <div class="container">
    <div class="row">

      <div id="mobile-top-nav-button"></div>

      <h1>
        <%= link_to :home, :class => 'logo' do %>
          <%= image_tag 'Sola_Logo_@2x.png', :width => 133, :height => 81, :alt => raw(t('logo_name')) %>
        <% end %>
      </h1>

      <ul class="sola-nav">
        <li><h4><%= link_to raw(t('page.locations.title')), :locations, tabindex: 0 %></h4></li>
        <% if english_locale? %>
          <li><h4><%= link_to raw(t('page.book_now.book_an_appointment')), :booknow_search, tabindex: 0 %></h4></li>
        <% end %>
        <li><h4><%= link_to raw(t('page.own.title')), :own_your_salon, :class => 'own_your_salon', tabindex: 0 %></h4></li>
        <li><h4><%= link_to raw(t('page.about.title')), :about_us, :class => 'about_us', 'data-nav' => "about-us", tabindex: 0 %></h4></li>
        <li><h4><%= link_to raw(t('page.blog.title')), :blog, tabindex: 0 %></h4></li>
      </ul>

      <%= form_tag [:search, :results], :method => :get, :class => 'nav-search', role: :search do %>
        <input class="nav-search-input" placeholder="<%= raw t 'header.search_placeholder' %>" type="search" name="query" aria-label="search query">
        <span tabindex="0" aria-label="search" role="button" class="nav-search-button search-icon"></span>
      <% end %>

    </div>
  </div>
</div>

