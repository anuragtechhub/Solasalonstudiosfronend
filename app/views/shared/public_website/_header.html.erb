        <% if I18n.locale.to_s == 'en' %>
          <li class="border-left"><%= link_to raw(t('page.franchising.title')), 'https://www.solafranchising.com', :target => '_blank', 'aria-label' => 'solafranchising', tabindex: 0 %></li>
        <% end %>
        <li class="border-left"><%= link_to :contact_us, tabindex: 0 do %><%= raw t 'header.contact_us' %><% end %></li>
