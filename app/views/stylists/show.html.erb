      <%= link_to(image_tag(@stylist.image_6(:thumbnail), :class => 'thumbnail').html_safe, @stylist.image_6(:original), :target => '_blank') if @stylist.image_6.exists? %>
      <%= link_to(image_tag(@stylist.image_7(:thumbnail), :class => 'thumbnail').html_safe, @stylist.image_7(:original), :target => '_blank') if @stylist.image_7.exists? %>
      <%= link_to(image_tag(@stylist.image_8(:thumbnail), :class => 'thumbnail').html_safe, @stylist.image_8(:original), :target => '_blank') if @stylist.image_8.exists? %>
      <%= link_to(image_tag(@stylist.image_9(:thumbnail), :class => 'thumbnail').html_safe, @stylist.image_9(:original), :target => '_blank') if @stylist.image_9.exists? %>
